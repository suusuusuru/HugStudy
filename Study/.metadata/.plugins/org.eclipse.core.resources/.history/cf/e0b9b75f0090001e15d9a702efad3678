package person;

public class Task2_18 {
        public static void main(String[] args) {
        //問② Personクラスをインスタンス化し、名前「山田太郎」 年齢「23」 住所「東京都」 をカプセル化されたsetterで設定して下さい。
        Person man = new Person();
        man.setName("山田太郎");
        man.setAge("23");
        man.setAddles("東京都");
        
       

        //問③ 設定した名前・年齢・住所をカプセル化されたgetterで呼び出してして下さい。
        String n = man.getName();
        String a = man.getAge();
        String j = man.getAddles();
        
        System.out.println("名前は"+ n + "です。");
        System.out.println("年齢は"+ a + "です。");
        System.out.println("住所は"+ j + "です。");
            
        }
}



    class Person {
    private String name;
    private String age;
    private String addles;
  
    
    //問① 上記変数に従って、getterとsetterを設定して下さい。
    

   
    void setName(String name) {
        this.name = name;
    }
    void setAge(String age) {
        this.age = age;
    }
    void setAddles(String addles) {
        this.addles = addles;
    }
    
    public String getName() {
        return this.name;
    }
    public String getAge() {
        return this.age;
    }
    public String getAddles() {
        return this.addles;
    }
    }
    
   